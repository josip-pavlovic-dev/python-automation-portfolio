{
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "python.defaultInterpreterPath": "${workspaceFolder}/projects/01-web-scraper/venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["projects/01-web-scraper/tests"],
    "python.testing.unittestEnabled": false,

    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.diagnosticsMode": "workspace",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,

    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": false,
    "python.linting.ruffEnabled": true,
    "python.linting.pylintEnabled": false,

    "ruff.enable": true,
    "ruff.lintOnSave": true,
    "ruff.fixOnSave": true,
    "ruff.organizeImports": true,

    "github.copilot.enable": {
        "*": true,
        "python": true,
        "markdown": false
    },
    "github.copilot.chat.localeOverride": "sr"
}
