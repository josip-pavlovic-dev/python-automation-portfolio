{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup venv (web-scraper)",
            "type": "shell",
            "command": "python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}/projects/01-web-scraper"
            },
            "problemMatcher": []
        },
        {
            "label": "Install deps (web-scraper)",
            "type": "shell",
            "command": "source venv/bin/activate && pip install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}/projects/01-web-scraper"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint (ruff)",
            "type": "shell",
            "command": "ruff check .",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$python"]
        },
        {
            "label": "Format (black)",
            "type": "shell",
            "command": "black projects/01-web-scraper",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Test (pytest)",
            "type": "shell",
            "command": "source venv/bin/activate && python -m pytest",
            "options": {
                "cwd": "${workspaceFolder}/projects/01-web-scraper"
            },
            "group": "test",
            "problemMatcher": ["$python"]
        }
    ]
}
